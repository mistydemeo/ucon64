nero.o: libdiscmage.h misc.h nero.h dxedll_priv.h
sheets.o: libdiscmage.h misc.h sheets.h dxedll_priv.h
other.o: libdiscmage.h misc.h other.h dxedll_priv.h
dllinit.o: libdiscmage.h misc.h dxedll_priv.h
